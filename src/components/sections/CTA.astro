---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import CtaButton from "../shared/CtaButton.astro";
import GradiantText from "../shared/GradiantText.astro";
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="cta" class=`pb-20 ${className}`>
  <Container>
    <div
      class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-3xl bg-gradient-to-br from-red-50 via-white to-red-50 dark:from-black dark:via-gray-900 dark:to-black 
      border-2 border-primary/20 dark:border-primary/30 scroll-scale overflow-hidden"
    >
      <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-primary/5 to-primary/5 animate-pulse blur-3xl"></div>
      <div class="mx-auto text-center max-w-xl md:max-w-2xl relative z-10">
        <h1
          class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight
          font-display font-bold text-heading-1 scroll-fade-in"
        >
          Ready to

          <GradiantText> Transform </GradiantText>
          Your
          <GradiantText> Digital Presence? </GradiantText>
        </h1>
        <Paragraph className="pt-10 font-semibold scroll-fade-in scroll-delay-1">
          Let's discuss how we can help grow your business with our web development, media buying, and content services.
        </Paragraph>
        <div class="mx-auto max-w-md sm:max-w-xl pt-10 scroll-fade-in scroll-delay-2">
          <CtaButton />
        </div>
      </div>
    </div>
  </Container>
</section>
