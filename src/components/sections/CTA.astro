---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import CtaButton from "../shared/CtaButton.astro";
import GradiantText from "../shared/GradiantText.astro";
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="cta" class=`pb-20 ${className}`>
  <Container>
    <div
      class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl bg-gradient-to-br from-red-50 to-red-100 dark:from-gray-900 dark:to-gray-800 border border-red-200 dark:border-red-900/30 scroll-scale"
    >
      <div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
        <h1
          class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight
          font-bold text-heading-1 scroll-fade-in"
        >
          Ready to

          <GradiantText> Transform </GradiantText>
          Your
          <GradiantText> Digital Presence? </GradiantText>
        </h1>
        <Paragraph className="pt-10 font-semibold scroll-fade-in scroll-delay-1">
          Let's discuss how we can help grow your business with our web development, media buying, and content services.
        </Paragraph>
        <div class="mx-auto max-w-md sm:max-w-xl pt-10 scroll-fade-in scroll-delay-2">
          <CtaButton />
        </div>
      </div>
    </div>
  </Container>
</section>
