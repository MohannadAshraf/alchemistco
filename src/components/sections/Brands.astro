<script>
  // Tab switching functionality
  const tabButtons = document.querySelectorAll('[data-category]');
  const mediaResults = document.getElementById('media-results');
  const websitesResults = document.getElementById('websites-results');
  const aiResults = document.getElementById('ai-results');
  const contentResults = document.getElementById('content-results');

  const allResults = [mediaResults, websitesResults, aiResults, contentResults];

  tabButtons.forEach(button => {
    button.addEventListener('click', () => {
      const category = button.getAttribute('data-category');
      
      // Update active tab styles
      tabButtons.forEach(btn => {
        if (btn === button) {
          btn.classList.add('active-tab');
          btn.classList.remove('border-2', 'border-box-border', 'bg-box-bg', 'hover:border-primary', 'hover:bg-primary/5');
          btn.classList.add('bg-gradient-to-r', 'from-primary', 'to-primary-light', 'text-white', 'shadow-lg', 'shadow-primary/30');
        } else {
          btn.classList.remove('active-tab');
          btn.classList.remove('bg-gradient-to-r', 'from-primary', 'to-primary-light', 'text-white', 'shadow-lg', 'shadow-primary/30');
          btn.classList.add('border-2', 'border-box-border', 'bg-box-bg', 'hover:border-primary', 'hover:bg-primary/5');
        }
      });
      
      // Hide all results first
      allResults.forEach(result => {
        if (result) result.style.display = 'none';
      });
      
      // Show selected category
      switch(category) {
        case 'media':
          if (mediaResults) mediaResults.style.display = 'grid';
          break;
        case 'websites':
          if (websitesResults) websitesResults.style.display = 'grid';
          break;
        case 'ai':
          if (aiResults) aiResults.style.display = 'grid';
          break;
        case 'content':
          if (contentResults) contentResults.style.display = 'grid';
          break;
      }
    });
  });
</script>

<style>
  .results-grid {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    gap: 1.5rem;
  }
  
  @media (min-width: 768px) {
    .results-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 2rem;
    }
  }
  
  @media (min-width: 1024px) {
    .results-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 2rem;
    }
  }
  
  .results-container {
    animation: fadeIn 0.5s ease-in-out;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
