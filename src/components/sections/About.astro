---
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import GradiantText from "../shared/GradiantText.astro";
// Professional team collaboration in modern workspace
const aboutImageUrl = "https://images.unsplash.com/photo-1556761175-5973dc0f32e7?w=800&h=600&fit=crop&q=80";

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="about" class=`${className}`>
  <Container className="space-y-10 md:space-y-12">
    <div class="text-center max-w-3xl mx-auto scroll-fade-in">
      <Title>
        About <GradiantText>TheAlchemistsCo</GradiantText>
      </Title>
      <Paragraph className="mt-6">
        We transform digital presence into growth through web development, media buying, and content creation.
      </Paragraph>
    </div>

    <div class="flex flex-col lg:flex-row gap-10 lg:gap-12 items-center">
      <div class="flex-1 w-full lg:w-1/2 scroll-slide-left">
        <div class="relative w-full h-80 lg:h-96 rounded-3xl overflow-hidden group">
          <img
            src={aboutImageUrl}
            alt="TheAlchemistsCo team working together"
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
        </div>
      </div>
      
      <div class="flex-1 w-full lg:w-1/2 space-y-6 scroll-slide-right">
        <div class="scroll-fade-in scroll-delay-1">
          <h3 class="text-2xl font-bold text-heading-1 mb-3">Our Story</h3>
          <Paragraph>
            We bring together developers, strategists, and creators to deliver integrated marketing solutions that work.
          </Paragraph>
        </div>
        
        <div class="scroll-fade-in scroll-delay-2">
          <h3 class="text-2xl font-bold text-heading-1 mb-3">Our Approach</h3>
          <Paragraph>
            Data-driven insights meet creative innovation. We craft solutions that look great and drive measurable growth.
          </Paragraph>
        </div>
        
        <div class="scroll-fade-in scroll-delay-3">
          <h3 class="text-2xl font-bold text-heading-1 mb-3">Our Values</h3>
          <Paragraph>
            Integrity, transparency, and results. Your success is our success.
          </Paragraph>
        </div>
      </div>
    </div>
  </Container>
</section>

