---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";

import myImage from "../../assets/images/dev-with-c-1.webp";
import GradiantText from "../shared/GradiantText.astro";

type FeatureProps = {
  title: string;
  description: string;
};
const features = [
  {
    title: "Data-Driven Strategy",
    description:
      "Every decision is backed by analytics and insights, ensuring maximum ROI on your investments.",
  },
  {
    title: "Custom Web Solutions",
    description:
      "Tailored websites and applications designed specifically for your business needs and goals.",
  },
  {
    title: "Strategic Media Buying",
    description:
      "Expert placement across platforms with continuous optimization for best performance.",
  },
  {
    title: "Compelling Content",
    description:
      "Content that resonates with your audience and drives engagement and conversions.",
  },
  {
    title: "Transparent Reporting",
    description:
      "Regular, detailed reports so you always know how your campaigns are performing.",
  },
  {
    title: "Performance Optimization",
    description:
      "Continuous testing and refinement to improve results over time.",
  },
  {
    title: "Multi-Platform Expertise",
    description:
      "Seamless integration across all major advertising and content platforms.",
  },
  {
    title: "Brand Consistency",
    description:
      "Unified brand voice and visual identity across all touchpoints.",
  },
  {
    title: "Dedicated Support",
    description:
      "Personal account management and responsive support when you need it.",
  },
  {
    title: "Scalable Solutions",
    description:
      "Services that grow with your business, from startup to enterprise level.",
  },
  {
    title: "Conversion Focus",
    description:
      "Every element designed to turn visitors into customers and leads into sales.",
  },
  {
    title: "Proven Track Record",
    description:
      "Years of experience delivering results for businesses across industries.",
  },
];

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="features" class=`${className}`>
  <Container className="">
    <div class="text-center max-w-3xl mx-auto scroll-fade-in">
      <Title>
        Why Choose <GradiantText>AlchemistsCo</GradiantText>?
      </Title>
    </div>
    <div class="flex flex-row flex-wrap mt-8 justify-center gap-7">
      {
        features.map((feature: FeatureProps, index: number) => {
          const delayIndex = (index % 6) + 1;
          const delayClass = `scroll-delay-${Math.min(delayIndex, 5)}`;
          return (
            <div
              class={`flex items-center text-heading-3 font-medium justify-center scroll-fade-in ${delayClass} 
              transition-all duration-300 ease-[cubic-bezier(0.28,0.03,0.76,0.99)] hover:text-primary hover:scale-105 cursor-default px-4 py-2 rounded-full hover:bg-red-50 dark:hover:bg-gray-800`}
            >
              <span
                class="font-bold rounded-full w-8 h-8 mr-2 bg-gradient-to-br from-black to-primary text-white inline-flex justify-center items-center 
              transition-all duration-300 ease-[cubic-bezier(0.28,0.03,0.76,0.99)] group-hover:scale-110 group-hover:rotate-12 shadow-lg"
              >
                &checkmark;
              </span>
              {feature.title}
            </div>
          );
        })
      }
    </div>
  </Container>
</section>
