---
import Container from "../shared/Container.astro";
import Spots from "../shared/Spots.astro";
---

<section class="relative mt-12 md:mt-16">
  <Container>
    <div
      class="mx-auto p-5 sm:p-6 py-6 sm:py-8 max-w-5xl rounded-3xl bg-box-bg hover:bg-slate-200 dark:hover:bg-slate-800 border border-box-border shadow-sm md:divide-x divide-box-border grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-8 md:gap-6 lg:gap-12 scroll-fade-in transition-all duration-300 hover:shadow-md hover:-translate-y-1"
    >
      <div class="text-center scroll-fade-in scroll-delay-1 group">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1 transition-colors duration-300 group-hover:text-primary"
        >
          150+
        </h2>
        <p class="mt-2 text-heading-3">Websites Launched</p>
      </div>

      <div class="text-center scroll-fade-in scroll-delay-2 group">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1 transition-colors duration-300 group-hover:text-primary"
        >
          $5M+
        </h2>
        <p class="mt-2 text-heading-3">Ad Spend Managed</p>
      </div>

      <div class="text-center scroll-fade-in scroll-delay-3 group">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1 transition-colors duration-300 group-hover:text-primary"
        >
          200+
        </h2>
        <p class="mt-2 text-heading-3">Happy Clients</p>
      </div>

      <div class="text-center scroll-fade-in scroll-delay-4 group">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1 transition-colors duration-300 group-hover:text-primary"
        >
          300%
        </h2>
        <p class="mt-2 text-heading-3">Avg. ROI Increase</p>
      </div>
    </div>
  </Container>
</section>
