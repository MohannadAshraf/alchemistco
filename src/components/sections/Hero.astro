---
import { Image } from "astro:assets";
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import ByNumber from "./ByNumber.astro";

// Modern digital marketing workspace - professional and creative
const heroImageUrl =
  "https://images.unsplash.com/photo-1522202176988-66273c2fd55f?w=1200&h=1200&fit=crop&q=80";
import CtaButton from "../shared/CtaButton.astro";
import ByResult from "./ByResult.astro";
import GradiantText from "../shared/GradiantText.astro";
import RotatingText from "../shared/RotatingText.astro";

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section class=`relative pt-24 lg:pt-28 ${className}`>
  <Container className={"flex flex-col lg:flex-row gap-10 lg:gap-12"}>
    <div
      class="relative flex flex-col items-center text-center lg:text-left lg:py-7 xl:py-8
        lg:items-start lg:max-w-none max-w-3xl mx-auto lg:mx-0 lg:flex-1 lg:w-1/2 scroll-slide-left"
    >
      <h1
        class="text-4xl/tight sm:text-5xl/tight md:text-6xl/tight xl:text-7xl/tight
             font-display font-bold text-heading-1 leading-tight"
      >
        Build the 
        <GradiantText>Momentum</GradiantText>
        your brand <GradiantText>Deserves</GradiantText>
      </h1>
      <Paragraph
        className="mt-8 scroll-fade-in scroll-delay-1 text-lg md:text-xl"
      >
        Youâ€™ve built something people <RotatingText
          words={["want.", "desire.", "need.", "look for."]}
          className="font-bold text-primary"
          interval={2000}
        /> We provide the clarity and focus to turn that initial spark into a sustainable foundation for scale.
      </Paragraph>

      <div class="mt-16 w-full flex flex-col scroll-fade-in scroll-delay-2">
        <div class="lg:mx-auto mb-5">
          <CtaButton />
        </div>
        <div class="mx-auto">
          <ByResult />
        </div>
      </div>
    </div>

    <div
      class="flex flex-1 lg:w-1/2 lg:h-auto relative lg:max-w-none lg:mx-0 mx-auto max-w-3xl scroll-slide-right"
    >
      <div class="relative w-full h-full group">
        <div
          class="absolute inset-0 bg-gradient-to-br from-black/20 via-primary/20 to-primary/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
        <img
          src={heroImageUrl}
          alt="Modern digital marketing agency workspace"
          class="lg:absolute lg:w-full lg:h-full rounded-3xl object-cover lg:max-h-none max-h-96 transition-all duration-500 ease-[cubic-bezier(0.28,0.03,0.76,0.99)] group-hover:scale-105 group-hover:rotate-1 relative z-10 shadow-2xl"
        />
      </div>

      <!-- https://unsplash.com/photos/man-in-gray-hoodie-sitting-on-brown-wooden-chair-on-green-grass-field-during-daytime-3faX71BaNe0?utm_content=creditShareLink&utm_medium=referral&utm_source=unsplash -->
    </div>
  </Container>

  <ByNumber />
  <!-- <ByResult /> -->
</section>
