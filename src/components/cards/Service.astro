---
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
  title: string;
  features: string[];
  icon: string;
  className?: string;
}

const { title, features, icon, className = "" } = Astro.props;
---

<div
  class={`p-5 sm:p-6 lg:p-8 relative overflow-hidden rounded-3xl shadow-lg shadow-primary/10 dark:shadow-primary/20
  bg-gradient-to-tr from-white/90 to-red-50/50 dark:from-slate-800/30 dark:to-black/50 backdrop-blur-md border border-primary/10
  hover:bg-gradient-to-tr hover:from-red-50 hover:to-white hover:dark:from-black/50 hover:dark:to-primary/10 
  transition-all duration-300 ease-[cubic-bezier(0.28,0.03,0.76,0.99)] hover:shadow-xl hover:shadow-primary/20 dark:hover:shadow-primary/30 
  hover:-translate-y-3 hover:scale-[1.02] group bounce-hover card-tilt ${className}`}
>
  <div
    class="rounded-xl p-3 text-heading-1 w-max relative bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 
    transition-all duration-300 ease-[cubic-bezier(0.28,0.03,0.76,0.99)] group-hover:bg-gradient-to-br group-hover:from-primary group-hover:to-primary-light 
    group-hover:text-white group-hover:scale-110 group-hover:rotate-3"
  >
    <slot set:html={icon} />
  </div>
  <div class="mt-6 space-y-4 relative">
    <h2 class="text-lg md:text-xl font-semibold text-heading-2">
      {title}
    </h2>
    <Paragraph>
      <div
        class="mt-8 space-y-4 text-heading-3 font-medium list-outside list-disc"
      >
        {
          features.map((feature) => {
            return (
              <div class="flex items-center font-medium">
                <span class="font-bold rounded-full w-8 h-8 mr-3 inline-flex justify-center items-center text-primary dark:text-white">
                  &checkmark;
                </span>
                {feature}
              </div>
            );
          })
        }
      </div>
    </Paragraph>
  </div>
  <!-- <span
    class="absolute w-32 aspect-square -bottom-16 -right-16 bg-primary/10 rounded-full"
  ></span> -->
</div>
